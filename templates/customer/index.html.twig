{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <h1>Stripe Customers List</h1>

    <table class="table table-hover table-bordered">
        <thead>
            <tr class="bg-primary">
                <th class="text-white">Name</th>
                <th class="text-white">Email</th>
                <th class="text-white">Description</th>
                <th class="text-white">Balance</th>
                <th class="text-white">Created</th>
                <th class="text-white">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.name }}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.description }}</td>
                <td>{{ customer.balance }}</td>
                <td>{{ customer.created ? customer.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-sm btn-info" href="{{ path('app_customer_show', {'id': customer.id}) }}">
                        <i class="fa fa-search"></i> show
                    </a>
                    <a class="btn btn-sm btn-primary" href="{{ path('app_customer_edit', {'id': customer.id}) }}">
                        <i class="fa fa-pencil"></i> edit
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_customer_new') }}">
        <i class="fa fa-plus"></i> Create new
    </a>
{% endblock %}
