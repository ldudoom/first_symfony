{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer</h1>

    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ customer.description }}</td>
            </tr>
            <tr>
                <th>Balance</th>
                <td>{{ customer.balance }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{{ customer.created|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col col-2">
            <a class="btn btn-primary" href="{{ path('app_customer_index') }}">
                <i class="fa fa-th-list"></i>
                back to list
            </a>
        </div>
        <div class="col col-1">
            <a class="btn btn-info" href="{{ path('app_customer_edit', {'id': customer.id}) }}">
                <i class="fa fa-pencil"></i>
                edit
            </a>
        </div>
        <div class="col col-1">
            {{ include('customer/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
